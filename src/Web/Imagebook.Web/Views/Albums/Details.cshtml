@model AlbumEditDeleteDetailsViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Album</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            <label asp-for="@Model.Name"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.Name
        </dd>
        <dt class="col-sm-2">
            <label asp-for="@Model.CreatedOn"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.CreatedOn
        </dd>
        <dt class="col-sm-2">
            <label asp-for="@Model.Description"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.Description
        </dd>
        <dt class="col-sm-2">
            <label asp-for="@Model.Username"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.Username
        </dd>
        <dt class="col-sm-2">
            <label asp-for="@Model.Location"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.Location
        </dd>
    </dl>
</div>
<hr />
<div class="row justify-content-md-center">
    <div class="col-md-auto">
        <form method="post" enctype="multipart/form-data" asp-controller="Pictures" asp-action="Upload">
            <div class="form-group">
                <div class="col-md-10">
                    <p>Upload a picture using this form:</p>
                    <input type="file" name="file">
                    <input type="hidden" name="id" value="@Model.Id" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-10">
                    <input class="btn-success" type="submit" value="Upload">
                </div>
            </div>
        </form>
    </div>
</div>
<hr />
<div>
    @for (int i = 0; i < Model.PictureViewModels.Count; i+=4)
    {
    <div class="row">
        @for (int k = 0; k <= 3 && k + i < Model.PictureViewModels.Count; k++)
        {
        <div class="col-md-3">
            <div class="img-thumbnail">
                <a asp-controller="Pictures" asp-action="Show" asp-route-id="@Model.PictureViewModels[k + i].Id">
                    <img src="@Model.PictureViewModels[k + i].Src" alt="@Model.PictureViewModels[k + i].Name" style="width:100%">
                    <div class="caption">
                        <p>@Model.PictureViewModels[k + i].Name</p>
                    </div>
                </a>
            </div>
        </div>
        }
    </div>
    }
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
